<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppActivityIndicator.Views.FeedBackPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Margin="5">
            <Editor x:Name="FeedBack" HeightRequest="200" Placeholder="Góp ý" Text="{Binding FeedBack, Mode=TwoWay}"/>
            <Button Text="Gửi góp ý" Command="{Binding SendFeedBackCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>