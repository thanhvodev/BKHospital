<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppActivityIndicator.Views.MakingAppointmentPage"
             xmlns:custom="clr-namespace:AppActivityIndicator.CustomControls;assembly=AppActivityIndicator"
             Title="Đặt lịch khám">
    <ContentPage.Content>
        <Grid RowDefinitions="0.4*, 0.4*, 0.2*">
            <TableView Grid.Row="0" Margin="0,20,0,0">
                <TableRoot>
                    <TableSection >
                        <ViewCell>
                            <Grid RowDefinitions="1*" ColumnDefinitions="0.2*, 0.7*, 0.3*" Margin="5">
                                <Image Source="profile_icon" Grid.Column="0"/>
                                <Label Text="XEM LẠI THÔNG TIN CÁ NHÂN" Grid.Column="1"
                                       VerticalOptions="Center"/>
                                <Image Source="arrow_forward" Grid.Column="2"/>
                            </Grid>
                        </ViewCell>
                        <ViewCell>
                            <Grid RowDefinitions="1*" ColumnDefinitions="0.2*, 0.8*" Margin="5">
                                <Image Source="calendar_v2" Grid.Column="0"/>
                                <custom:DatePickerCtrl x:Name="datePicker" Placeholder="Chọn ngày khám" 
                                                       HeightRequest="45"  HorizontalOptions="FillAndExpand"
                                                       Grid.Column="1" Format="dd/MM/yyyy"/>
                            </Grid>
                        </ViewCell>
                        <ViewCell>
                            <Grid RowDefinitions="1*" ColumnDefinitions="0.2*, 0.8*" Margin="5">
                                <Image Source="medication" Grid.Column="0"/>
                                <custom:PickerCtrl  Placeholder="Chọn chuyên khoa" 
                                                       HeightRequest="45"  HorizontalOptions="FillAndExpand"
                                                       Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                        <ViewCell>
                            <Grid RowDefinitions="1*" ColumnDefinitions="0.2*, 0.8*" Margin="5">
                                <Image Source="doctor" Grid.Column="0"/>
                                <custom:PickerCtrl  Placeholder="Chọn bác sĩ" 
                                                       HeightRequest="45"  HorizontalOptions="FillAndExpand"
                                                       Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                        <ViewCell>
                            <Grid RowDefinitions="1*" ColumnDefinitions="0.2*, 0.8*" Margin="5">
                                <Image Source="schedule" Grid.Column="0"/>
                                <custom:PickerCtrl  Placeholder="Chọn giờ khám" 
                                                       HeightRequest="45"  HorizontalOptions="FillAndExpand"
                                                       Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <StackLayout HeightRequest="100" Grid.Row="1">
                <Button  Margin="10" Text="Đặt khám" 
                                BackgroundColor="{StaticResource PageBackground}"
                                TextColor="White" 
                                />
            </StackLayout>
            <StackLayout Grid.Row="2" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Label Text="Hỗ trợ" FontSize="Medium" HorizontalOptions="Center"/>
                <Label Text="1945724833" FontSize="Large" TextColor="{StaticResource Primary}"/>
                <!--<StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CallSupportCommand}" />
                </StackLayout.GestureRecognizers>-->
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>